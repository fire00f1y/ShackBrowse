<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tlist_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_ics"
    android:orientation="vertical">
    <RelativeLayout 
         android:id="@+id/tlist_FSnoResults"
         android:visibility="gone"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/tlist_noResultsText"
	      	   android:layout_width="wrap_content"
	      	   android:layout_height="wrap_content"
	      	   android:layout_centerInParent="true"
	      	   android:textColor="@color/nonpreview_post_text_color"
	      	   android:text="@string/tlist_emptyText"
      		   />
    </RelativeLayout>
    <ListView android:id="@id/android:list"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/tlist_FSLoad"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ProgressBar
            style="@style/WidgetThrobber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            />
    </RelativeLayout>


