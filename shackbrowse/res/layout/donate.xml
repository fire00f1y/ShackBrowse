<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/screen_main"
        >
    
    
	<TextView 
        android:id="@+id/donateVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version #"
        android:textSize="24sp" 
        android:paddingLeft="5dip"
        android:paddingBottom="5dip"
        />
	    
    <Button
        android:id="@+id/changeLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="Change Log"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shack Browse is developed by bradsh. It was created from Droid Chatty source code, although little of the Droid Chatty source now remains. The source is available by request."
        android:textSize="14sp" 
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingBottom="10dp"
        />
    
    <Button
        android:id="@+id/donateUnlockButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:layout_marginTop="15dip"
        android:paddingRight="10dip"
        android:text="Checking lime status..."
        android:enabled="false"
        />
   
    <TextView
        android:id="@+id/donatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text=""
        android:textSize="14sp"
         />
    
    <TextView 
        android:id="@+id/donatorStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="Lime status: checking..."
        android:textSize="12sp" />

    </LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/screen_wait"
    android:visibility="gone"
        >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Wait..."
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/screen_features"
    android:visibility="gone"
        >
    <Button
        android:id="@+id/donateToggleLime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:layout_marginTop="30dip"
        android:paddingRight="10dip"
        android:text="Toggle lime icon"
        />
    <TextView 
        android:id="@+id/donateLimeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="Lime status: "
        android:textSize="12sp" />

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="The lime icon will appear next to your username inside shack browse. All shack browse users will be forced to gaze upon it."
        android:textSize="12sp" />
    
   
    <CheckBox
        android:id="@+id/donateDisableLimeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Disable display of all lime icons" />
    
 
    
    </LinearLayout>
</LinearLayout>
</ScrollView>