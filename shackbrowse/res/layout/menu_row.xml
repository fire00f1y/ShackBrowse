<?xml version="1.0" encoding="utf-8"?>
<net.woggle.CheckableLinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/menuItemContainer"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="3dip"
  android:paddingRight="0dip"
  android:background="@color/selector_appmenu"
  android:orientation="vertical"
  >
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  >
  		<ImageView
            android:layout_width="43dp"
            android:layout_weight="0"
            android:layout_height="43dp"
            android:scaleType="centerInside"
            android:id="@+id/menuItemIcon"
            android:layout_gravity="top"
            android:layout_marginLeft="3dp"
            android:paddingTop="9dip"
            android:paddingBottom="9dip"
            />
	     <TextView
	         android:id="@+id/menuItemText"
	         android:layout_width="0px"
             android:layout_weight="1"
	         android:layout_height="wrap_content"
	         android:textColor="@color/nonpreview_post_text_color"
	         android:ellipsize="end"
	         android:maxLines="6"
	         android:textSize="@dimen/menuItemTextSize"
	         android:layout_gravity="center_vertical"
	         android:paddingLeft="8dip"
             android:paddingTop="9dip"
             android:paddingBottom="9dip"
	     />
        <ImageView
          android:layout_width="53dp"
          android:layout_height="43dp"
          android:layout_weight="0"
          android:scaleType="centerInside"
          android:id="@+id/menuItemSettings"
          android:layout_gravity="top"
          android:gravity="end"
          android:layout_marginRight="0dp"
          android:src="@drawable/ic_action_action_settings"
          android:visibility="gone"
          android:background="?android:attr/selectableItemBackground"
            android:paddingTop="9dip"
            android:paddingBottom="9dip"
            android:paddingRight="10dip"
          />
 	 </LinearLayout>
</net.woggle.CheckableLinearLayout>